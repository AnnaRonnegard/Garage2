<!DOCTYPE html>
<html lang="en-gb">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - The Garage</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top newnavcolor">
        <div class="container maintextnavbar newnavcolor">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("The Garage", "Index", "Home", new { area = "" }, new { @class = "navbar-brand newnavcolor" })
            </div>
            <div class="navbar-collapse collapse newnavcolor">
                <ul class="nav navbar-nav newnavcolor">
                    <li class="newnavcolor">@Html.ActionLink("The Company", "Contact", "Home")</li>
                    <li class="newnavcolor">@Html.ActionLink("Check In", "Create", "Vehicles")</li>
                    <li class="newnavcolor">
                        @Html.ActionLink("Vehicles", "Index", "Vehicles")
                    </li>
            </ul>
            <!--@Html.Partial("_LoginPartial") -->
        </div>
    </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-xs-6">
                <footer class="footer">
                    &copy; @DateTime.Now.Year - The Garage,  an AnnaChristinaOlga Product.
            </footer>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
